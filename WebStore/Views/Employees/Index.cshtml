@model IEnumerable<WebStore.Models.Employee>

<div class="container">
    <h3>Сотрудники</h3>

    @if (Model.Any())
    {
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>
                        <a asp-action="Details" asp-route-Id="@employee.Id">
                            @employee.LastName
                        </a>
                    </td>
                    <td>@employee.FirstName</td>
                    <td>@employee.Patronymic</td>
                    <td>@employee.Age</td>
                    <td>
                        <a asp-action="Edit" asp-route-Id="@employee.Id"
                           class="btn-sm btn-default">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a asp-action="Delete" asp-route-Id="@employee.Id"
                           class="btn-sm btn-danger">
                            <i class="fa fa-times"></i>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>Сотрудники отсутствуют</p>
    }

    <a asp-controller="Home" asp-action="Index">На главную</a>
</div>